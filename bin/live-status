#!/usr/bin/env bash

# A script to call the Live Status service
#
# Usage
#
#   live-status spotify:episode:6v49WroqPRvc0m4J5dRtPj SE
#

set -eo pipefail

# Check if grpcurl is installed
command -v grpcurl >/dev/null 2>&1 || {
  echo >&2 "grpcurl not installed. Install: brew install grpcurl"
  exit 1
}

if [ "$#" -ne 2 ]; then
  echo "You must provide URI followed by the two letter country code"
  exit 1
fi

readonly uri=$1
readonly country_code=$2

# Parse kind from URI
declare kind
kind=$(cut -d':' -f2 <<< "$uri")

if [[ ! ${kind} =~ ^(show|episode|creatorchannel|podcastshort)$ ]]; then
  echo "${kind} kind not allowed, only show, episode, creatorchannel or podcastshort"
  exit 1
fi

if [[ ${#country_code} -ne 2 ]]; then
  echo "Country code must be exactly two letters long"
  exit 1
fi

# kind 1 = show
# kind 2 = episode

kind_num=0
if [ "$kind" == "show" ]; then
  kind_num=1
elif [ "$kind" == "episode" ]; then
  kind_num=2
fi

declare ls_ip
ls_ip=$(
dig +short -t SRV _spotify-podcast-live-status._grpc.services.gew1.spotify.net | \
  head -n 1 | \
  cut -d' ' -f4
)

readonly payload='{
  "uri": "'"$uri"'",
  "country_code": "'"$country_code"'",
  "kind": "'"$kind_num"'"
}'

echo "Checking ${uri}"

grpcurl \
  -plaintext \
  -max-time 30 \
  -d "$payload" \
  "$ls_ip":5990 \
  spotify.podcastlivestatus.PodcastLiveStatus/GetLiveStatus

